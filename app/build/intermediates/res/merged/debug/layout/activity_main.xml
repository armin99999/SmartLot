<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.armingrossrieder.smartlots.MainActivity">

    <Button
        android:text=">> search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_my_lots"
        android:layout_centerHorizontal="true"
        android:id="@+id/search"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="setSearch"
        android:visibility="visible" />

    <Button
        android:text=">> Near Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:id="@+id/near_me"
        android:onClick="setView_near_me"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:text=">> my lots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:id="@+id/list_my_lots"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:visibility="visible"
        android:onClick="setList_my_lots"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/near_me"
        android:layout_alignStart="@+id/near_me" />
</RelativeLayout>
